<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SelectorStyle">
        <item name="android:layout_height">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/selectorTextColor</item>
    </style>

    <style name="SelectorStyle.AlbumSelector">
        <item name="android:background">@color/albumSelectorBackground</item>
    </style>
    <style name="SelectorStyle.ArtistSelector">
        <item name="android:background">@color/artistSelectorBackground</item>
    </style>
    <style name="SelectorStyle.SongSelector">
        <item name="android:background">@color/songSelectorBackground</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="ListItemStyle.PrimaryInfo">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>
    <style name="ListItemStyle.SecondaryInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingStart">32dp</item>
    </style>

</resources>
