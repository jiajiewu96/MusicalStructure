<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/album_list_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ListItemStyle.PrimaryInfo"
        tools:text="@string/album_tools_text"
        />
    <TextView
        android:id="@+id/album_list_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ListItemStyle.SecondaryInfo"
        tools:text="@string/artist_tools_text"/>
    <TextView
        android:id="@+id/album_list_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ListItemStyle.SecondaryInfo"
        tools:text="@string/song_tools_text"/>
</LinearLayout>